# AGI-o1 Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# OpenAI API Configuration
# =============================================================================

# Environment: sandbox, staging, or production
OPENAI_ENVIRONMENT=sandbox

# API Keys for each environment (set the one matching your OPENAI_ENVIRONMENT)
OPENAI_API_KEY_SANDBOX=sk-...
OPENAI_API_KEY_STAGING=sk-...
OPENAI_API_KEY_PRODUCTION=sk-...

# Legacy single-key fallback (used if environment-specific key not found)
# OPENAI_API_KEY=sk-...

# =============================================================================
# Model Configuration - GPT-5.2 and Codex
# =============================================================================

# Main assistant model (gpt-5.2 recommended for most tasks)
OPENAI_MODEL_ASSISTANT=gpt-5.2

# Reasoning model for deep analysis (gpt-5.2 with xhigh effort for hardest tasks)
OPENAI_MODEL_REASONING=gpt-5.2

# Reasoning effort levels: none, low, medium, high, xhigh
# - medium: Recommended for daily use (default)
# - high: Extended thinking for complex tasks
# - xhigh: Maximum reasoning for hardest challenges (GPT-5.2 exclusive)
OPENAI_MODEL_REASONING_EFFORT=high

# Coding models - GPT-5.2-Codex is the most advanced agentic coding model
# Achieves 56.4% on SWE-Bench Pro and 64.0% on Terminal-Bench 2.0
OPENAI_MODEL_CODE=gpt-5.2-codex

# GPT-5.1-Codex-Max for long-horizon agentic tasks
# Best for multi-hour engineering tasks, refactors, and migrations
OPENAI_MODEL_CODE_MAX=gpt-5.1-codex-max

# Realtime models for voice/audio applications
OPENAI_MODEL_REALTIME=gpt-realtime
OPENAI_MODEL_REALTIME_MINI=gpt-realtime-mini

# Embedding model (text-embedding-3-large recommended for better retrieval)
OPENAI_MODEL_EMBEDDING=text-embedding-3-large

# Enable auto-compaction for long context (GPT-5.2 supports 400K context window)
# This enables multi-hour reasoning without hitting context limits
OPENAI_MODEL_COMPACTION=true

# =============================================================================
# ReasoningBank Configuration
# =============================================================================

REASONING_BANK_ENABLED=true
REASONING_BANK_PATH=./docs/reasoning_bank.json
REASONING_BANK_MAX_ITEMS=500

# =============================================================================
# Logging Configuration
# =============================================================================

LOG_LEVEL=INFO
LOG_SAMPLE_PROMPTS=true
LOG_SAMPLE_RESPONSES=false
